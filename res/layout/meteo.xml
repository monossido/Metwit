<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:focusable="true" android:focusableInTouchMode="true" 
   >
    <LinearLayout style="@style/TitleBar">
        <ImageView style="@style/TitleBarLogo"
            android:contentDescription="description_logo"
            android:src="@drawable/title_logo" 
            android:onClick="onHomeClick"/>

        <View style="@style/TitleBarSpring" />

                    <ImageView style="@style/TitleBarSeparator" />
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="description_search"
            android:src="@drawable/ic_button_map"
            android:onClick="onMappaClick" />
    </LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:background="@drawable/background"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fadingEdge="none">
<RelativeLayout
android:id="@+id/widget28"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android" >



<TextView android:textColor="#000" android:layout_height="wrap_content" android:text="Nuova segnalazione" android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="10dip" android:textSize="20dip" android:textStyle="bold"></TextView>
<Button android:id="@+id/Button01"  android:layout_marginBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Condizione meteo" android:layout_marginTop="8dip" android:layout_below="@+id/TextView03" android:layout_centerHorizontal="true"></Button>
<ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ImageView01" android:layout_toRightOf="@+id/TextView03" android:layout_marginLeft="10dip"></ImageView>
<TextView android:textColor="#000"  android:layout_centerHorizontal="true" android:textStyle="bold" android:text="Fonte della segnalazione" android:layout_below="@+id/Button01" android:id="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dip"></TextView>
    <ImageView android:layout_centerHorizontal="true" android:layout_above="@+id/TextView01" android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/board" />
    <RadioGroup
    android:layout_below="@+id/TextView01"
    android:id="@+id/RadioGroup"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:orientation="horizontal" android:layout_centerHorizontal="true">
<RadioButton android:layout_marginLeft="40dip" android:id="@+id/RadioButton01" android:layout_height="wrap_content" android:layout_width="wrap_content"></RadioButton><RadioButton android:layout_marginLeft="55dip" android:id="@+id/RadioButton02"  android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/RadioButton01"></RadioButton><RadioButton android:layout_marginLeft="55dip" android:id="@+id/RadioButton03"  android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_toRightOf="@+id/RadioButton02"></RadioButton>
</RadioGroup>
<TextView  android:text="Te stesso" android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/RadioGroup" android:layout_marginLeft="30dip" android:textColor="#000"></TextView>
<TextView android:text="Sito web/Forum" android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/TextView04" android:layout_marginLeft="105dip"  android:textColor="#000"></TextView>
<TextView android:text="Conoscente" android:id="@+id/TextView06" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/TextView05" android:layout_marginLeft="215dip"  android:textColor="#000"></TextView>



<TextView android:textColor="#000" android:layout_centerHorizontal="true" android:textStyle="bold" android:layout_below="@+id/ImageView03" android:id="@+id/TextView02" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="LocalitÃ  della segnalazione:" android:layout_marginTop="8dip"></TextView>
<ImageView android:src="@drawable/board" android:layout_marginTop="8dp" android:layout_centerHorizontal="true" android:layout_below="@+id/TextView05" android:id="@+id/ImageView03" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
<Button android:layout_below="@+id/TextView02" android:layout_height="wrap_content" android:id="@+id/Button02" android:layout_width="wrap_content" android:text="Rileva la posizione" android:layout_marginLeft="8dip"></Button>
        <ProgressBar style="@android:style/Widget.ProgressBar.Inverse"
            android:id="@+id/rilevamento" android:layout_height="wrap_content" android:layout_width="wrap_content" 
            android:visibility="gone" android:layout_below="@+id/TextView02" android:layout_marginLeft="40dip"/>
<EditText android:id="@+id/EditText01" android:layout_below="@+id/ImageView04" android:layout_height="100dip" android:layout_width="300dip" android:layout_centerInParent="true" android:hint="Commento" android:layout_marginTop="8dp"></EditText>
<ImageView android:src="@drawable/board" android:layout_marginTop="85dp" android:layout_below="@+id/ImageView03" android:id="@+id/ImageView04" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
<Button android:layout_below="@+id/TextView02" android:layout_marginLeft="150dip" android:layout_height="wrap_content" android:id="@+id/Button03" android:layout_width="wrap_content" android:text="Inserisci manualmente"></Button>
<ProgressBar style="@android:style/Widget.ProgressBar.Inverse"
            android:id="@+id/conversione" android:layout_height="wrap_content" android:layout_width="wrap_content" 
            android:visibility="gone" android:layout_below="@+id/TextView02" android:layout_marginLeft="210dip"/>
<Button android:layout_below="@+id/EditText01" android:layout_height="wrap_content" android:id="@+id/PickImage" android:text="Aggiungi foto" android:layout_width="wrap_content" android:layout_centerInParent="true"></Button>
<ImageView android:layout_toLeftOf="@+id/PickImage" android:layout_below="@+id/EditText01" android:id="@+id/Image" android:layout_width="50dip" android:layout_height="50dip" android:layout_marginRight="10dip"></ImageView>
<Button android:layout_below="@+id/PickImage" android:layout_height="wrap_content" android:id="@+id/Button04" android:text="Invia Segnalazione" android:layout_width="wrap_content" android:layout_centerInParent="true"></Button>




</RelativeLayout>
</ScrollView>
</LinearLayout>