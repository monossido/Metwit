<TextView android:textColor="#000" android:layout_below="@+id/SegnalazioniT" android:id="@+id/NSegnalazioni" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15dip" android:layout_centerHorizontal="true"></TextView>
