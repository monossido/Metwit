<TextView android:id="@+id/SegnVTx" android:layout_height="wrap_content" android:layout_toRightOf="@+id/SegnV" android:layout_width="wrap_content" android:layout_below="@+id/SegnVT" android:textSize="13dip" android:textColor="#000" android:layout_marginTop="10dip"></TextView>
