<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">
<RelativeLayout
android:layout_width="300dip"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android" >

<EditText android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:id="@+id/UserR" android:hint="Username" android:layout_width="200dip"></EditText>
<EditText android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:id="@+id/PasswordR" android:hint="Password" android:layout_below="@+id/UserR" android:layout_width="200dip" android:password="true"></EditText>
<EditText android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:id="@+id/MailR" android:hint="E-mail" android:layout_below="@+id/PasswordR" android:layout_width="200dip" ></EditText>

<ProgressBar style="@android:style/Widget.ProgressBar"
            android:id="@+id/localitaR" android:layout_height="wrap_content" android:layout_width="wrap_content" 
            android:visibility="gone" android:layout_below="@+id/MailR" android:layout_marginLeft="60dip" />
<Button android:layout_below="@+id/MailR" android:layout_marginLeft="30dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rileva località" android:id="@+id/Rileva"></Button>
<ProgressBar style="@android:style/Widget.ProgressBar"
            android:id="@+id/trasformaR" android:layout_height="wrap_content" android:layout_width="wrap_content" 
            android:visibility="gone" android:layout_below="@+id/MailR" android:layout_marginLeft="130dip" />
<Button android:layout_height="wrap_content" android:id="@+id/LocalitaR" android:text="Località da cui scrivi" android:layout_width="wrap_content" android:layout_below="@+id/MailR" android:layout_marginLeft="140dip"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/InviaR" android:text="Registrati" android:layout_width="wrap_content" android:layout_marginTop="50dip" android:layout_centerHorizontal="true" android:layout_below="@+id/MailR"></Button>

</RelativeLayout>
</ScrollView>